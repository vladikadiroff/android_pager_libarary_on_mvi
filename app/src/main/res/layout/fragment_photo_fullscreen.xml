<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ru.vladikadiroff.pagination.utils.helpers.ImageViewWithAspectRatio
        android:id="@+id/transitionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/pictureImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/upBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_opacity_system_ui">

        <ImageView
            android:id="@+id/navigateImage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/photo_full_screen_bar"
            android:padding="8dp"
            android:src="@drawable/ic_navigate_up" />

    </FrameLayout>




</FrameLayout>